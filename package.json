{
	"name": "synk",
	"private": true,
	"type": "module",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"lint": "turbo lint",
		"clean": "turbo clean && rm -rf node_modules",
		"prepare": "husky && pnpm -r build",
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"db:push": "turbo -F @synk/db db:push",
		"db:studio": "turbo -F @synk/db db:studio",
		"db:generate": "turbo -F @synk/db db:generate",
		"db:migrate": "turbo -F @synk/db db:migrate",
		"db:start": "turbo -F @synk/db db:start",
		"db:watch": "turbo -F @synk/db db:watch",
		"db:stop": "turbo -F @synk/db db:stop",
		"db:down": "turbo -F @synk/db db:down"
	},
	"dependencies": {
		"@synk/api": "workspace:*",
		"@synk/auth": "workspace:*",
		"@synk/config": "workspace:*",
		"@synk/db": "workspace:*",
		"dotenv": "^17.2.2",
		"zod": "^4.1.11"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.0",
		"@types/node": "^22.13.11",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"tsdown": "^0.15.5",
		"tsx": "^4.20.6",
		"turbo": "^2.5.4"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write ."
		]
	},
	"packageManager": "pnpm@10.18.3"
}
